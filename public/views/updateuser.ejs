<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Movie</title>
    <link rel="stylesheet" href="../css/edituser.css" />
  </head>
  <body>
    <header> 
      <div class="headerbox1">
        <img src="../images/Logo_JS_Pro.png" alt="">
        <a href="/">Home</a>
        <% if(moviedata.roles != "Admin" ){ %>
          <a href="/typemovie">Movies</a>
          <a href="/typeseries">Series</a>
        <% }%>
        <% if (moviedata.userName != "" && moviedata.roles == "Admin") { %>
          <a href="/movies">Movies</a>
          <a href="/users">Users</a>
          <% }%>
        <% if (moviedata.roles == "User"){ %>
        <a href="/favorite/<%=moviedata.user_id%>">Favorite</a>
        <% }%>
      </div>
      <div class="headerbox2"> 
        <% if (!moviedata.userName) { %>
        <a class="signup" href="/login">Sign In</a>
        <% } %>
      <% if (moviedata.userName) { %>
        <ul>
          <li>
          <img src="../images/<%=moviedata.profilePicture%>" alt="" class="profile">
          <ul class="dropdown">
            <li><a href="/user/<%=moviedata.user_id%>">Edit User</a></li>
            <li><a href="/logout">Sign out</a></li>
          </ul>
          </li>
        </ul>
      </div>
      <% } %>
    </header>
    <div class="mainbox">
      <h1>Update User</h1>
      <form action="/user/<%=users.user_id%>" method="post" enctype="multipart/form-data">
        <label for="">Username</label>
        <input type="text" name="name" value="<%= users.name%>" />
        <br><br>
        <label for="">Password</label>
        <input type="text" name="password" value="<%= users.password%>"/>
        <br><br>
        <input type="file" name="imageFile"/>
        <a href="/deleteuser/<%=moviedata.user_id%>"onclick="return confirm('You delete really')">Delete User</a>
        <input type="submit" value="Update User" class="btn"/>
      </form>
    </div>
    </body>
</html>
